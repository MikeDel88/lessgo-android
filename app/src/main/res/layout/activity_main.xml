<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2DFDB"
    android:foregroundGravity="center"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="180dp"
        android:layout_height="134dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/iconlocalisation"
        tools:layout_marginTop="100dp" />

    <TextView
        android:id="@+id/textView50"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="LESS GO !"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etPseudo"
        android:layout_width="322dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#6DFFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:backgroundTintMode="add"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="identifiant" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#6DFFFFFF"
        android:backgroundTintMode="add"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/btConnexion"
        android:layout_width="166dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:backgroundTint="#48FFFFFF"
        android:cursorVisible="true"
        android:gravity="center"
        android:text="se connecter"
        android:textColor="#63090000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btLienRegister"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:backgroundTint="#48FFFFFF"
        android:cursorVisible="true"
        android:gravity="center"
        android:text="S'INSCRIRE"
        android:textColor="#8000796B"
        android:textStyle="bold" />


</LinearLayout>